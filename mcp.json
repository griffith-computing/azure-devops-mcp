{
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name  (e.g. 'contoso')"
    },
    {
      "id": "ado_authentication_type",
      "type": "promptString",
      "description": "Azure DevOps authentication type (e.g. 'PAT')",
      "default": "pat"
    },
    {
      "id": "ado_pat",
      "type": "promptString",
      "description": "Azure DevOps Personal Access Token (PAT)",
      "password": true,
      "default": ""
    },
    {
      "id": "ado_server",
      "type": "promptString",
      "description": "Azure DevOps server URL (e.g. 'https://dev.azure.com')",
      "default": "https://win-nlpbft953tl/DefaultCollection"
    }
  ],
  "servers": {
    "ado": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@azure-devops/mcp", "${input:ado_org}", "-p", "${input:ado_pat}", "-s", "${input:ado_server}", "-a", "${input:ado_authentication_type}"],
      "env": {
        "LOG_LEVEL": "debug",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      }
    }
  }
}
